datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String @id @default(cuid())
  email        String @unique
  username     String @unique
  bio          String?
  image        String?
  subs         UserSub[]
  posts        Post[]
  comments     Comment[]
  postVotes    PostVote[]
  commentVotes CommentVote[]
  password     String
  createdAt    DateTime @default(now()) @map("created_at")
  @@map("users")
}

model Sub {
  name        String @id
  title       String?
  description String?
  image       String?
  banner      String?
  members     UserSub[]
  posts       Post[]
  @@map("subs")
}

model Post {
  id        String @id @default(cuid())
  title     String
  body      String
  image     String?
  creator   User @relation(fields: [creatorId], references: [id])
  creatorId String @map("creator_id")
  sub       Sub @relation(fields: [subName], references: [name])
  subName   String @map("sub_name")
  comments  Comment[]
  votes     PostVote[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")
  @@map("posts")
}

model UserSub {
  user    User @relation(fields: [userId], references: [id])
  userId  String @map("user_id")
  sub     Sub @relation(fields: [subName], references: [name])
  subName String @map("sub_name")
  @@id([userId, subName])
  @@map("user_subs")
}

model Comment {
  id        String @id @default(cuid())
  text      String
  post      Post @relation(fields: [postId], references: [id])
  postId    String @map("post_id")
  creator   User @relation(fields: [creatorId], references: [id])
  creatorId String @map("creator_id")
  votes     CommentVote[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")
  @@map("comments")
}

model PostVote {
  value  Int
  user   User @relation(fields: [userId], references: [id])
  userId String @map("user_id")
  post   Post @relation(fields: [postId], references: [id])
  postId String @map("post_id")
  @@id([userId, postId])
  @@map("post_votes")
}

model CommentVote {
  value     Int
  user      User @relation(fields: [userId], references: [id])
  userId    String @map("user_id")
  comment   Comment @relation(fields: [commentId], references: [id])
  commentId String @map("comment_id")
  @@id([userId, commentId])
  @@map("comment_votes")
}