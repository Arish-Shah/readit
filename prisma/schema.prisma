datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  image      String?
  isVerified Boolean  @default(false)
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
