{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "lib": ["es5", "es6", "es2018", "esnext.asynciterable"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  }
}
